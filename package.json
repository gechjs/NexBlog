{
  "name": "nexblog",
  "version": "1.0.0",
  "description": "A scalable blogging platform that empowers users to create, publish, and manage content effortlessly",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-deps": "npm install && cd client && npm install",
    "test": "npm run test:server && npm run test:client",
    "test:server": "echo 'Server tests not implemented yet'",
    "test:client": "cd client && npm test"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20"
  },
  "keywords": [
    "blog",
    "mern",
    "react",
    "node",
    "express",
    "mongodb"
  ],
  "author": "NexBlog Team",
  "license": "MIT"
}
